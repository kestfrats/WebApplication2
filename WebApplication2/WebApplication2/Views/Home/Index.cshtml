@using Microsoft.AspNetCore.Identity;
@using WebApplication2.Areas.Blog.Controllers;
@using WebApplication2.Areas.Identity.Data;
@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<ApplicationUser> SignInManager

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/home.js" asp-append-version="true"></script>
}

@if (SignInManager.IsSignedIn(User))
{

    <div class="row">
            <div class="col-md-2">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">  
                                Popular Hashtags
                            </div>
                            <div class="card-body">
                                <div id="hashtags">
                                   
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div id="timeline"></div>
            </div>
        </div>

}
else
{
    <div class="row">
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">  
                            Popular Hashtags
                        </div>
                        <div class="card-body">
                            <div id="hashtags">   
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div id="timeline"></div>
        </div>
    </div>
    
}

